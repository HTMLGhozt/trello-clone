{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16.12.0"
    }
  },
  "plugins": [
    "babel",
    "prettier",
    "react-hooks",
    "immer"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "config/**/*.js",
          "**/webpack.*.js",
          "*.config.js"
        ],
        "optionalDependencies": false
      }
    ],
    "arrow-parens": [
      2,
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "import/prefer-default-export": 0,
    "linebreak-style": 0,
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "info"
        ]
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [
          "draft"
        ]
      }
    ],
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "@/"
        ]
      }
    ],
    "react/jsx-one-expression-per-line": 0,
    "react/prefer-stateless-function": [
      2,
      {
        "ignorePureComponents": true
      }
    ],
    "react/require-default-props": 0,
    "react/jsx-filename-extension": 0
  }
}

